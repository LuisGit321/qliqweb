<%= render :partial => "/layouts/group_admin_left_menu"  %>  
<div class="interface_right_section">
  <h3>Facilities</h3>
  <div class="add"><%= link_to "Add facility", new_facility_path, :rel => :facebox  %></div>
  <table cellpadding="0" cellspacing="0">
    <tr class="interface_heading">
      <td class="col31_top none">NAME</td>
      <td class="none">Type</td>
      <td class="none">Phone</td>
      <td class="none">&nbsp;</td>
    </tr>
    <% @facilities.each do |facility| %>
      <tr class="light_blue">
        <td class="col31"><%= facility.name  %></td> 
        <td><%= facility.facility_type.blank? ? raw("&nbsp'") : facility.facility_type  %></td>   
        <td><%= facility.phone.blank? ? raw("&nbsp'") : facility.phone  %></td>   
        <td class="edit-link border_right">
          <%= link_to 'Edit', edit_facility_path(facility), :rel => :facebox %> | 
          <%= link_to 'Destroy', facility, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>                        
    <% end %>  
  </table>
  <div style="margin-top:20px;float:right">
    <%= will_paginate @facilities  %>  
  </div>  
</div>



