<div class="interface_left_section">
  <div class="left_navigation">
    <ul>
      <li><%= menu_link_to 'providers', 'index', 'Providers', providers_path  %></li> 
      <li><%= menu_link_to 'providers', 'index', 'Staff', providers_path(:for => "staff")  %></li> 
      <li><%= link_to 'Superbill', superbills_path %></li>
    </ul>
  </div>
</div>
<div class="interface_right_section">
  <h3><%= params[:for].blank? ? "Providers" : "Staff"  %></h3>  
  <div class="add"><%= link_to "Add #{ params[:for].blank? ? "Providers" : "Staff" }", new_provider_path(:for => params[:for]), :rel => :facebox  %></div>
  <table cellpadding="0" cellspacing="0">
    <tr class="interface_heading">
      <td class="col31_top none">FIRST NAME</td>
      <td class="none">LAST NAME</td>
      <td class="none">EMAIL</td>
      <td class="none">&nbsp;</td>
    </tr>
    <% @resources.each do |resource| %>  
      <tr class="light_blue">
        <td class="col31"><%= resource.first_name  %></td> 
        <td><%= resource.last_name  %></td> 
        <td><%= resource.user.try(:email)  %></td> 
        <td class="edit-link border_right">
        <%= link_to 'Delete', resource, :method => :delete, :confirm => "Are you sure?" %> |
        <%= link_to 'Reset password', reset_password_path(resource.user), :rel => :facebox %></td> 
      </tr>                        
    <% end %>  
  </table>
</div>
