<%= render :partial => "/admin/home/left_menu"  %>  
<div class="interface_right_section">
  <h3>Groups</h3>
  <div class="add"><%= link_to "Add Group", new_physician_group_path, :rel => :facebox  %></div>
  <table cellpadding="0" cellspacing="0">
    <tr class="interface_heading">
      <td class="col31_top none">GROUP NAME</td>
      <td class="none">PHONE</td>
      <td class="none">BILLING AGENCY</td>
      <td class="none">&nbsp;</td>
    </tr>
    <% @physician_groups.each do |group| %>  
      <tr class="light_blue">
        <td class="col31"><%= group.name  %></td> 
        <td><%= group.phone.blank? ? raw("&nbsp;") : group.phone  %></td> 
        <td><%= group.billing_agencies.empty? ? raw("&nbsp;") : group.billing_agencies.collect(&:first_name).join(', ')  %></td> 
        <td class="col32 border_right edit-link">
          <%= link_to 'Edit', edit_physician_group_path(group), :rel => :facebox %> |  
          <%= link_to 'Delete', physician_group_path(group), :method => :delete, :confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>  
  </table>
</div>
